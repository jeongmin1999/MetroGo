<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="@color/fontcolor"
            android:layout_marginBottom="20dp"
            />

        <EditText
            android:id="@+id/login_id_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:autofillHints="emailAddress"
            android:inputType="textEmailAddress"
            android:hint="@string/login_email"
            android:padding="15dp"
            style="@style/EditTextStyle"
            />

        <EditText
            android:id="@+id/login_pw_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:autofillHints="emailAddress"
            android:inputType="textPassword"
            android:hint="@string/login_password"
            android:padding="15dp"
            style="@style/EditTextStyle"
            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_text"
            android:backgroundTint="#0C85ED"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/signup_text"
            android:backgroundTint="#00CCFF"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.7dp"
            android:layout_margin="10dp"
            android:background="@color/fontcolor" />

        <ImageView
            android:id="@+id/kakao_login_imgv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/kakao_login_medium_wide" />
        <ImageView
            android:id="@+id/google_login_imgv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/kakao_login_medium_wide" />
        <ImageView
            android:id="@+id/naver_login_imgv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/kakao_login_medium_wide" />
        <TextView
            android:id="@+id/find_account_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/fontcolor"
            android:text="@string/find_acc"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:textAlignment="viewEnd"/>
    </LinearLayout>


</LinearLayout>